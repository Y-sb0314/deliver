<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting"
    android:orientation="vertical"
    android:background="#EEEEFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="324dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/bazzi"
            android:gravity="center"
            android:text="음성인식 배달 앱"
            android:textColor="#000000"
            android:textSize="30dp" />



        <ImageButton
            android:id="@+id/settingBtn"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonround"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_setting" />


        <ImageButton
            android:id="@+id/voiceBtn"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonround"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_mic"

            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="3dp"
                    app:cardCornerRadius="45dp">

                    <ImageButton
                        android:id="@+id/btn_chicken"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@drawable/roundedbutton"
                        android:scaleType="fitXY"
                        android:src="@drawable/chicken2" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    app:cardCornerRadius="45dp">

                    <ImageButton
                        android:id="@+id/btn_pizza"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="3"
                        android:background="@drawable/roundedbutton"
                        android:scaleType="fitXY"
                        android:src="@drawable/pizza2" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="9dp"
                    app:cardCornerRadius="45dp">

                    <ImageButton
                        android:id="@+id/btn_jajang"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="3"
                        android:background="@drawable/jajang2" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bazzi"
                    android:gravity="center"
                    android:text="치킨"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bazzi"
                    android:gravity="center"
                    android:text="피자"
                    android:textColor="#000000"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bazzi"
                    android:gravity="center"
                    android:text="중식"
                    android:textColor="#000000"
                    android:textSize="30dp" />

            </LinearLayout>


            <Button
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonround"
                android:fontFamily="@font/bazzi"
                android:text="주문내역"
                android:textColor="#000000"
                android:textSize="30dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
